<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/css/Home.css">
</head>
<body>
  <div class="container">
    <h2>Welcome to the Home Page</h2>

    <!-- Hiển thị các nút đăng nhập và đăng ký -->
    <div class="button-container">
      <a href="/api/login">
        <button>Login</button>
      </a>
      <a href="/api/register">
        <button>Register</button>
      </a>
    </div>

    <section>
      <h3>Categories</h3>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(category => { %>
            <tr>
              <td><strong><%= category.name %></strong></td>
              <td><%= category.description %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>

    <section>
      <h3>Products</h3>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Price (USD)</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr>
              <td><strong><%= product.name %></strong></td>
              <td><em><%= product.category_id.name %></em></td>
              <td><%= product.description %></td>
              <td><%= product.price %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </div>
</body>
</html>
